TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
EMAIL_API_KEY=
SMS_API_KEY=

# ==========================================
# Docker Registry (optional)
# ==========================================
DOCKER_REGISTRY=ghcr.io/your-org/

# ==========================================
# Indexer Configuration
# ==========================================
START_INDEXING=true
INDEXER_START_SLOT=0
