# ==========================================
# USDX/Wexel Production Environment
# ==========================================
# Copy this file to .env.production and fill in the values

# ==========================================
# Application
# ==========================================
NODE_ENV=production
DEPLOY_ENV=production
DEPLOY_TAG=latest

# ==========================================
# Backend / Indexer
# ==========================================
DATABASE_URL=postgresql://usdx:CHANGE_PASSWORD@postgres:5432/usdx_wexel_prod
REDIS_URL=redis://redis:6379
JWT_SECRET=CHANGE_TO_STRONG_RANDOM_SECRET_MIN_32_CHARS
ADMIN_JWT_SECRET=CHANGE_TO_DIFFERENT_STRONG_RANDOM_SECRET
API_PORT=3001
CORS_ALLOWED_ORIGINS=https://app.usdx-wexel.com,https://www.usdx-wexel.com

# ==========================================
# Database
# ==========================================
POSTGRES_USER=usdx
POSTGRES_PASSWORD=CHANGE_PASSWORD
POSTGRES_DB=usdx_wexel_prod

# ==========================================
# Solana Configuration
# ==========================================
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_WEBSOCKET_URL=wss://api.mainnet-beta.solana.com
SOLANA_NETWORK=mainnet-beta

# Update these with deployed program IDs
SOLANA_POOL_PROGRAM_ID=
SOLANA_WEXEL_NFT_PROGRAM_ID=
SOLANA_REWARDS_PROGRAM_ID=
SOLANA_COLLATERAL_PROGRAM_ID=
SOLANA_ORACLE_PROGRAM_ID=
SOLANA_MARKETPLACE_PROGRAM_ID=
SOLANA_BOOST_MINT_ADDRESS=

# ==========================================
# Tron Configuration
# ==========================================
TRON_GRID_API_KEY=your_trongrid_api_key
TRON_NETWORK=mainnet
TRON_DEPOSIT_VAULT_ADDRESS=
TRON_PRICE_FEED_ADDRESS=
TRON_BRIDGE_PROXY_ADDRESS=
TRON_USDT_ADDRESS=TR7NHqjeKQxGTCi8q8ZY4pL8otSzgjLj6t

# ==========================================
# Price Oracles
# ==========================================
PYTH_PRICE_SERVICE_URL=https://hermes.pyth.network
PYTH_PRICE_FEED_ID=
CHAINLINK_PRICE_FEED_ADDRESS=
CEX_API_KEY=

# ==========================================
# Frontend (webapp)
# ==========================================
NEXT_PUBLIC_API_URL=https://api.usdx-wexel.com
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
NEXT_PUBLIC_SOLANA_NETWORK=mainnet-beta
