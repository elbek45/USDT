# USDX/Wexel Production Environment Template
# Copy this file to .env.production and fill in all values
# DO NOT commit the actual .env.production file to git!

# ============================================================================
# APPLICATION
# ============================================================================
NODE_ENV=production
VERSION=1.0.0

# ============================================================================
# DATABASE
# ============================================================================
POSTGRES_USER=usdx
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
POSTGRES_DB=usdx_wexel
DATABASE_URL=postgresql://usdx:CHANGE_ME_STRONG_PASSWORD_HERE@db:5432/usdx_wexel

# ============================================================================
# REDIS
# ============================================================================
REDIS_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
REDIS_URL=redis://default:CHANGE_ME_STRONG_PASSWORD_HERE@redis:6379

# ============================================================================
# API SECURITY
# ============================================================================
JWT_SECRET=CHANGE_ME_LONG_RANDOM_STRING_AT_LEAST_64_CHARS_HERE
ADMIN_JWT_SECRET=CHANGE_ME_DIFFERENT_LONG_RANDOM_STRING_HERE
API_PORT=3001
CORS_ORIGIN=https://app.usdx-wexel.com

# ============================================================================
# SOLANA CONFIGURATION (MAINNET)
# ============================================================================
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
# Or use paid RPC: https://solana-mainnet.g.alchemy.com/v2/YOUR_API_KEY
SOLANA_WEBSOCKET_URL=wss://api.mainnet-beta.solana.com

# Deployed program IDs (set after deploying contracts)
SOLANA_POOL_PROGRAM_ID=YOUR_POOL_PROGRAM_ID_HERE
SOLANA_WEXEL_NFT_PROGRAM_ID=YOUR_WEXEL_NFT_PROGRAM_ID_HERE
SOLANA_REWARDS_PROGRAM_ID=YOUR_REWARDS_PROGRAM_ID_HERE
SOLANA_COLLATERAL_PROGRAM_ID=YOUR_COLLATERAL_PROGRAM_ID_HERE
SOLANA_ORACLE_PROGRAM_ID=YOUR_ORACLE_PROGRAM_ID_HERE
SOLANA_MARKETPLACE_PROGRAM_ID=YOUR_MARKETPLACE_PROGRAM_ID_HERE

# Boost mint address (SPL token used for boost)
SOLANA_BOOST_MINT_ADDRESS=YOUR_BOOST_MINT_ADDRESS_HERE

# ============================================================================
# TRON CONFIGURATION (MAINNET)
# ============================================================================
TRON_GRID_API_KEY=YOUR_TRONGRID_API_KEY_HERE
TRON_NETWORK=mainnet

# Deployed contract addresses (set after deploying contracts)
TRON_DEPOSIT_VAULT_ADDRESS=YOUR_DEPOSIT_VAULT_ADDRESS_HERE
TRON_PRICE_FEED_ADDRESS=YOUR_PRICE_FEED_ADDRESS_HERE
TRON_BRIDGE_PROXY_ADDRESS=YOUR_BRIDGE_PROXY_ADDRESS_HERE
TRON_USDT_ADDRESS=TR7NHqjeKQxGTCi8q8ZY4pL8otSzgjLj6t  # USDT TRC-20 mainnet

# ============================================================================
# ORACLES & PRICING
# ============================================================================
# Pyth Network price feed ID for boost token
PYTH_PRICE_FEED_ID=YOUR_PYTH_FEED_ID_HERE

# Chainlink price feed address (if using Chainlink)
CHAINLINK_PRICE_FEED_ADDRESS=YOUR_CHAINLINK_FEED_ADDRESS_HERE

# CEX API for price aggregation (optional)
CEX_API_KEY=YOUR_CEX_API_KEY_HERE

# ============================================================================
# WALLET CONNECT
# ============================================================================
WALLETCONNECT_PROJECT_ID=YOUR_WALLETCONNECT_PROJECT_ID_HERE

# ============================================================================
# ADMIN & SECURITY
# ============================================================================
# Multisig address for critical operations
ADMIN_MULTISIG_ADDRESS=YOUR_MULTISIG_ADDRESS_HERE

# Pause guardian address (can emergency pause)
PAUSE_GUARDIAN_ADDRESS=YOUR_PAUSE_GUARDIAN_ADDRESS_HERE

# Timelock address
TIMELOCK_ADDRESS=YOUR_TIMELOCK_ADDRESS_HERE

# ============================================================================
# KYC/AML (Optional)
# ============================================================================
KYC_PROVIDER_API_KEY=YOUR_KYC_PROVIDER_API_KEY_HERE

# ============================================================================
# NOTIFICATIONS
# ============================================================================
# Webhook URL for system notifications
NOTIFICATION_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Email notifications (SendGrid, Mailgun, etc.)
EMAIL_API_KEY=YOUR_EMAIL_API_KEY_HERE
EMAIL_FROM=noreply@usdx-wexel.com

# SMS notifications (Twilio, etc.)
SMS_API_KEY=YOUR_SMS_API_KEY_HERE

# Telegram bot for alerts
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN_HERE
TELEGRAM_CHAT_ID=YOUR_TELEGRAM_CHAT_ID_HERE

# ============================================================================
# MONITORING & ERROR TRACKING
# ============================================================================
# Sentry DSN for error tracking
SENTRY_DSN=https://YOUR_SENTRY_DSN@sentry.io/PROJECT_ID

# Sentry environment
SENTRY_ENVIRONMENT=production

# ============================================================================
# FRONTEND (Next.js)
# ============================================================================
NEXT_PUBLIC_API_URL=https://api.usdx-wexel.com
NEXT_PUBLIC_WS_URL=wss://api.usdx-wexel.com
NEXT_PUBLIC_SOLANA_NETWORK=mainnet-beta
NEXT_PUBLIC_TRON_NETWORK=mainnet
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=YOUR_WALLETCONNECT_PROJECT_ID_HERE

# ============================================================================
# BACKUP
# ============================================================================
# Backup directory on host
BACKUP_DIR=/var/backups/usdx-wexel

# Backup retention (days)
RETENTION_DAYS=90

# Enable backup notifications
NOTIFICATION_ENABLED=true

# ============================================================================
# INFRASTRUCTURE
# ============================================================================
# Domain names
DOMAIN_APP=app.usdx-wexel.com
DOMAIN_API=api.usdx-wexel.com
DOMAIN_ADMIN=admin.usdx-wexel.com

# SSL certificate paths (if using Let's Encrypt)
SSL_CERT_PATH=/etc/letsencrypt/live/usdx-wexel.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/usdx-wexel.com/privkey.pem

# ============================================================================
# OPTIONAL: S3/SPACES FOR OFF-SITE BACKUPS
# ============================================================================
# AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
# AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
# AWS_REGION=us-east-1
# S3_BACKUP_BUCKET=usdx-wexel-backups

# Or DigitalOcean Spaces
# SPACES_ACCESS_KEY_ID=YOUR_SPACES_KEY
# SPACES_SECRET_ACCESS_KEY=YOUR_SPACES_SECRET
# SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com
