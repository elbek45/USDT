{
  "name": "usdx-wexel-monorepo",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "format": "prettier --write .",
    "test": "pnpm -r test",
    "clean": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "create-pr": "./scripts/create-pr.sh",
    "create-pr-web": "node scripts/web-pr-helper.js",
    "task:complete": "pnpm lint && pnpm build && pnpm create-pr",
    "task:complete-web": "pnpm lint && pnpm build && pnpm create-pr-web",
    "pr:auto": "gh pr create --title 'feat: auto-generated' --body 'Auto-generated PR' --base main",
    "pr:web": "node scripts/web-pr-helper.js",
    "pr:open": "open create-pr.html"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^9.0.0",
    "husky": "^9.1.7",
    "prettier": "^3.3.0",
    "turbo": "^2.0.0",
    "typescript": "^5.5.0"
  },
  "packageManager": "pnpm@9.5.0",
  "dependencies": {
    "@coral-xyz/anchor": "^0.32.1",
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "chai": "^6.2.0",
    "mocha": "^11.7.4",
    "ts-mocha": "^11.1.0"
  }
}
